<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Bruno" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>


        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/white</item>


        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>


        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>


        <item name="textInputStyle">@style/Widget.Bruno.TextInputLayout</item>
        <item name="buttonStyle">@style/Widget.Bruno.Button</item>

    </style>


    <style name="Widget.Bruno.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/secondary</item>
        <item name="hintTextColor">@color/secondary</item>
    </style>


    <style name="Widget.Bruno.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">16dp</item>
    </style>
</resources>
